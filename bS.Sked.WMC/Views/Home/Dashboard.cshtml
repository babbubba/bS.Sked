
@{
    ViewBag.Title = "Dashboard";
}

<h2>Dashboard</h2>

<div class="container">
    <input type="text" id="message" />
    <input type="button" id="sendmessage" value="Send" />
    <input type="hidden" id="displayname" />
    <ul id="discussion"></ul>

    <hr />
    <div>
        <h3>Messages</h3>
        <ul id="messages"></ul>
        <small>No more messages..</small>
    </div>
</div>
@section scripts {
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.2.2.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!--SignalR script to update the proxy page and send messages.-->

<script>
    $(function () {
        var proxy2 = $.connection.DashboardHub;

        proxy2.client.broadcastMessage = function (model) {
            // Add the message to the page.
            $('#messages').append('<li>' + htmlMessageEncode(model) + '</li>');
        };

        $.connection.hub.start().done(function () {
            //$('#sendmessage').click(function () {
            //    // Call the Send method on the hub.
            //    proxy.server.send($('#displayname').val(), $('#message').val());
            //    // Clear text box and reset focus for next comment.
            //    $('#message').val('').focus();
            //});
        });

    });

    function htmlMessageEncode(value) {
        var encodedValue = $('<h2 />').text(value.severity).html();
        encodedValue += $('<p />').text(value.message).html();
        return encodedValue;
    }

    </script>


